<Window TextBoxBase.TextChanged="Window_TextChanged"  x:Class="WpfRoutedEvent_2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <TextBox HorizontalAlignment="Left" Margin="78,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <RadioButton x:Name="radBut1" HorizontalAlignment="Left" Margin="78,110,0,0" VerticalAlignment="Top" Content="Обработка события в Textbox"/>
        <RadioButton x:Name="radBut2" HorizontalAlignment="Left" Margin="78,154,0,0" VerticalAlignment="Top" Content="Обработка события в Grid"/>
        <RadioButton x:Name="radBut3" HorizontalAlignment="Left" Margin="78,202,0,0" VerticalAlignment="Top" Content="Обработка события в Window"/>

    </Grid>
</Window>
